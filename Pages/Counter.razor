@page "/counter"

<PageTitle>Counter</PageTitle>

<MudText Typo="Typo.h4" GutterBottom="true">Counter</MudText>

<MudText Typo="Typo.body1" Role="status">Current count: @currentCount</MudText>

<MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="IncrementCount">Click me</MudButton>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
