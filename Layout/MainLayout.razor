@using MudBlazor.Interfaces
@inherits LayoutComponentBase

<MudThemeProvider @ref="_themeProvider" Theme="@_theme" IsDarkMode="true" ObserveSystemDarkModeChange="false"/>
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="ToggleDrawer" />
        <MudText Typo="Typo.h6">MudblazorThemeIssue</MudText>
        <MudSpacer />
        <MudButton Color="Color.Secondary" Variant="Variant.Filled" OnClick="RefreshTheme">Refresh</MudButton>
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Variant="DrawerVariant.Responsive" Elevation="1">
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.False" Class="pa-4">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    private bool _drawerOpen = true;
    private readonly CustomTheme _theme = new();
    private MudThemeProvider _themeProvider = null!;

    private void ToggleDrawer()
    {
        _drawerOpen = !_drawerOpen;
    }

    private void RefreshTheme()
    {
        var method = typeof(ComponentBase).GetMethod("StateHasChanged",
         System.Reflection.BindingFlags.NonPublic | System.Reflection.BindingFlags.Instance);
        method?.Invoke(_themeProvider, null);
    }
}
