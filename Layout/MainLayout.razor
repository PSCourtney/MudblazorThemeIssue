@inherits LayoutComponentBase
@inject IJSRuntime JS

<MudThemeProvider Theme="@_theme" IsDarkMode="true" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="ToggleDrawer" />
        <MudText Typo="Typo.h6">MudblazorThemeIssue</MudText>
        <MudSpacer />
        <MudButton Color="Color.Primary" Variant="Variant.Filled" Href="https://learn.microsoft.com/aspnet/core/" Target="_blank">About</MudButton>
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Variant="DrawerVariant.Responsive" Elevation="1">
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.False" Class="pa-4">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    private bool _drawerOpen = true;
    private readonly CustomTheme _theme = new();

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!firstRender) return;

        // Initialize iOS Safari theme fix to prevent style loss on PWA resume
        // If you identify the exact style id in devtools, pass it as the parameter
        await JS.InvokeVoidAsync("mudThemeIosFix.init", (string?)null);
    }

    private void ToggleDrawer()
    {
        _drawerOpen = !_drawerOpen;
    }
}
